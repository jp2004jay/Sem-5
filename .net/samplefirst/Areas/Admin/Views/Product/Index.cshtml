@model samplefirst.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="container my-2">
    <div class="row">
        <div class="col">
            <h1>List of Products</h1>
        </div>
        <div class="col d-flex align-items-center justify-content-end">
            <a class="btn btn-success d-flex align-items-center" asp-action="CreateUpdate" asp-controller="Product">
                <i class="bi bi-plus-circle fs-4 m-0 p-0 me-2"></i>
                <span class="fs-5">Add New Product</span>
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    @if (@Model.products == null || @Model.products.Count() != 0)
    {
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th></th>
                <th>
                    Product Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Created Date
                </th>
                <th>
                    Modified Date
                </th>
                <th></th>
            </tr>
        </thead>
    }
    else
    {
        <thead>When data is entered in this table as a time view data here.</thead>
    }
    <tbody>
        @foreach (var item in Model.products)
        {
            <tr>
                <td>@item.ID</td>
                <td style="width: 6rem; height: 6rem;" class="p-2">
                    <img class="w-100 h-100 rounded-circle" src="@item.ImageUrl" />
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.category.Name</td>
                <td>@item.CreatedDate</td>
                <td>@item.ModifiedDate</td>
                <td class="d-flex gap-3 justify-content-center align-items-start" style="height:6rem;">
                    <a class="btn btn-info" asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

