@model AdminThemeBC.Models.BillModel
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Bill</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="CoffeeShop" asp-controller="Product" asp-action="ProductList">Home</a></li>
                <li class="breadcrumb-item">Bill</li>
                <li class="breadcrumb-item active">Add Edit Bill Details</li>
            </ol>
        </nav>
    </div>
    <form class="w-75" asp-action="Save" method="post">
        <input type="number" hidden asp-for="BillID"/>
        <div class="row mb-3">
            <label for="firstName" class="col-sm-2 col-form-label">Bill Number</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="BillNumber">
                <span asp-validation-for="BillNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="firstName" class="col-sm-2 col-form-label">Bill Date</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" asp-for="BillDate" value="">
                <span asp-validation-for="BillDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputDate" class="col-sm-2 col-form-label">Order</label>
            <div class="col-sm-10">
                <select asp-for="OrderID" class="form-control">
                    <option value="">-- Select Order --</option>
                    @foreach (var user in ViewBag.orders)
                    {
                        <option value="@user.OrderID">@user.OrderName</option>
                    }
                </select>
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label">Total Amount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="TotalAmount" value="">
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label">Discount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Discount" value="">
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label">Net Amount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="NetAmount" value="">
                <span asp-validation-for="NetAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputDate" class="col-sm-2 col-form-label">User</label>
            <div class="col-sm-10">
                <select asp-for="UserID" class="form-control">
                    <option value="">-- Select User --</option>
                    @foreach (var user in ViewBag.users)
                    {
                        <option value="@user.UserID">@user.UserName</option>
                    }
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</main>

<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/additional-methods.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/additional-methods.min.js"></script>