@model AdminThemeBC.Models.OrderDetailModel
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Order Detail</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="CoffeeShop" asp-controller="Product" asp-action="ProductList">Home</a></li>
                <li class="breadcrumb-item">Order Detail</li>
                <li class="breadcrumb-item active">Add Edit Order Inner Details</li>
            </ol>
        </nav>
    </div>
    <form class="w-75" asp-action="Save" method="post">
        <input type="number" hidden asp-for="OrderDetailID"/>
        <div class="row mb-3">
            <label for="inputDate" class="col-sm-2 col-form-label">Order</label>
            <div class="col-sm-10">
                <select asp-for="OrderID" class="form-control">
                    <option value="">-- Select Order --</option>
                    @foreach (var user in ViewBag.orders)
                    {
                        <option value="@user.OrderID">@user.OrderName</option>
                    }
                </select>
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputDate" class="col-sm-2 col-form-label">Product</label>
            <div class="col-sm-10">
                <select asp-for="ProductID" class="form-control">
                    <option value="">-- Select Product --</option>
                    @foreach (var user in ViewBag.products)
                    {
                        <option value="@user.ProductID">@user.ProductName</option>
                    }
                </select>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Quantity" value="">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label">Amount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="Amount" value="">
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputText" class="col-sm-2 col-form-label">Total Amount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="TotalAmount" value="">
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputDate" class="col-sm-2 col-form-label">User</label>
            <div class="col-sm-10">
                <select asp-for="UserID" class="form-control">
                    <option value="">-- Select User --</option>
                    @foreach (var user in ViewBag.users)
                    {
                        <option value="@user.UserID">@user.UserName</option>
                    }
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</main>